---
import Container from "../shared/Container.astro";
---

<section class="relative mt-12 md:mt-16">
  <Container>
    <div
      class="mx-auto lg:mx-0 p-5 sm:p-6 py-6 sm:py-8 max-w-5xl rounded-3xl bg-box-bg border border-box-border shadow-lg shadow-box-shadow md:divide-x divide-box-border grid grid-cols-2 md:grid-cols-4 gap-4 sm:gap-8 md:gap-6 lg:gap-12"
    >
      <div class="text-center">
        <h2
          class="font-bold text-2xl sm:text-3xl md:text-4xl text-transparent bg-clip-text bg-gradient-to-br from-indigo-600 to-primary"
        >
          3+
        </h2>
        <p class="mt-2 text-heading-3 font-medium">Anos de História</p>
      </div>

      <div class="text-center">
        <h2
          class="font-bold text-2xl sm:text-3xl md:text-4xl text-transparent bg-clip-text bg-gradient-to-br from-primary to-green-600"
        >
          20+
        </h2>
        <p class="mt-2 text-heading-3 font-medium">Eventos Realizados</p>
      </div>

      <div class="text-center">
        <h2
          class="font-bold text-2xl sm:text-3xl md:text-4xl text-transparent bg-clip-text bg-gradient-to-br from-green-600 to-emerald-400"
        >
          15k+
        </h2>
        <p class="mt-2 text-heading-3 font-medium">Público Alcançado</p>
      </div>

      <div class="text-center">
        <h2
          class="font-bold text-2xl sm:text-3xl md:text-4xl text-transparent bg-clip-text bg-gradient-to-br from-indigo-600 via-primary to-green-600"
        >
          100+
        </h2>
        <p class="mt-2 text-heading-3 font-medium">Artistas e Atletas</p>
      </div>
    </div>
  </Container>
</section>