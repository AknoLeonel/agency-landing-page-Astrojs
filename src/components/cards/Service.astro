---
import Paragraph from '../shared/Paragraph.astro';

export interface Props{
    title:string,
    description:string
    icon: string
}

const {title, description, icon} = Astro.props
---
<div class="group p-5 sm:p-6 lg:p-8 rounded-3xl border border-box-border bg-box-bg shadow-sm hover:shadow-xl hover:shadow-primary/10 transition-all duration-300 hover:-translate-y-1 relative overflow-hidden h-full flex flex-col">
    
    <div class="absolute inset-0 bg-gradient-to-br from-primary/5 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

    <div class="rounded-2xl bg-primary/10 p-3 text-primary w-max relative z-10 group-hover:bg-primary group-hover:text-white transition-colors duration-300 shadow-sm">
            <slot set:html={icon} />
    </div>

    <div class="mt-6 space-y-3 relative z-10 flex-1">
        <h2 class="text-lg md:text-xl font-bold text-heading-2 group-hover:text-primary transition-colors duration-300">
            {title}
        </h2>
        <Paragraph>
            {description}
        </Paragraph>
    </div>

    <span class="absolute w-32 aspect-square -bottom-16 -right-16 bg-primary/5 rounded-full group-hover:bg-primary/10 transition-all duration-300 group-hover:scale-125"></span>
</div>