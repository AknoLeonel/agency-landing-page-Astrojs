---
import BtnLink from "../shared/BtnLink.astro";
import Container from "../shared/Container.astro";
import Navitem from "../shared/Navitem.astro";

const navItems = [
    { href:"#inicio", text:"Início" },
    { href:"#projetos", text:"Projetos" },
    { href:"#sobre-nos", text:"Sobre Nós" },
    { href:"#contato", text:"Contato" },
];
---

<header class="absolute inset-x-0 top-0 z-50 py-6">
    <Container>
        <nav class="w-full flex justify-between gap-6 relative" aria-label="Navegação Principal">
            {/* Logo Otimizada com Width/Height para evitar CLS */}
            <div class="min-w-max inline-flex relative">
                <a href="/" class="relative flex items-center gap-3" aria-label="Ir para a página inicial">
                    <img src="/images/1.png" alt="Logotipo Instituto Inspirar e Produzir" width="32" height="32" class="w-8 h-8 object-contain">
                    <div class="inline-flex text-lg font-semibold text-heading-1">
                        Instituto Inspirar e Produzir
                    </div>
                </a>
            </div>

            {/* Overlay Mobile */}
            <div data-nav-overlay aria-hidden="true" class="fixed hidden inset-0 lg:!hidden bg-box-bg/80 backdrop-blur-md z-40 transition-opacity duration-300"></div>

            {/* Menu Links */}
            <div data-navbar class="flex h-0 overflow-hidden lg:!h-auto lg:scale-y-100 duration-300 ease-in-out flex-col gap-y-6 gap-x-4 lg:flex-row w-full lg:justify-between lg:items-center absolute lg:relative top-full lg:top-0 bg-body lg:bg-transparent border-x border-b border-box-border lg:border-0 z-50 rounded-b-2xl lg:rounded-none shadow-lg lg:shadow-none">
                <ul class="border-t border-box-border lg:border-t-0 px-6 lg:px-0 pt-6 lg:pt-0 flex flex-col lg:flex-row gap-y-4 gap-x-3 text-lg text-heading-2 w-full lg:justify-center lg:items-center font-medium">
                    {navItems.map(item => {
                        return <Navitem {...item}/>
                    })}
                </ul>

                <div class="lg:min-w-max flex items-center sm:w-max w-full pb-6 lg:pb-0 border-b border-box-bg lg:border-0 px-6 lg:px-0">
                    <BtnLink text="Fale Conosco" href="https://wa.me/5561981534799?text=Ol%C3%A1" className="flex justify-center w-full sm:w-max shadow-md hover:shadow-lg transition-shadow" variant="primary"/>
                </div>
            </div>

            {/* Controles (Dark Mode + Menu Mobile) */}
            <div class="min-w-max flex items-center gap-x-3">
                <button data-switch-theme aria-label="Alternar tema escuro/claro" class="outline-none flex relative text-heading-2 rounded-full p-2 lg:p-3 border border-box-border hover:bg-box-bg transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 dark:flex hidden">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 009.002-5.998z" />
                    </svg>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 dark:hidden">
                         <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" />
                    </svg>
                </button>
                
                <button data-toggle-nav data-open-nav="false" aria-expanded="false" aria-label="Abrir menu de navegação" class="lg:hidden outline-none w-8 h-8 flex flex-col justify-center gap-1.5 relative z-50">
                    <span id="line1" class="w-6 h-0.5 rounded-full bg-heading-2 transition-transform duration-300 ease-in-out"></span> 
                    <span id="line2" class="w-6 origin-center h-0.5 rounded-full bg-heading-2 transition-transform duration-300 ease-in-out"></span> 
                    <span id="line3" class="w-6 h-0.5 rounded-full bg-heading-2 transition-transform duration-300 ease-in-out"></span>         
                </button>
            </div>
        </nav>
    </Container>
</header>