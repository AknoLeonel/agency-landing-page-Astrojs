---
import Footer from "../components/elements/Footer.astro";
import Navbar from "../components/elements/Navbar.astro";

export interface Props {
  title: string;
  description?: string;
  image?: string;
}

// Valores padrão caso não sejam passados nas props
const { 
  title, 
  description = "Site oficial do Wake Up Brasília 2025. Campeonato Brasileiro de Wakeboard, cultura e lazer promovidos pelo Instituto Inspirar e Produzir.",
  image = "/images/1.png"
} = Astro.props;
---

<!doctype html>
<html lang="pt-BR" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/images/1.png" />
    <meta name="generator" content={Astro.generator} />
    
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="twitter:card" content="summary_large_image" />

    <title>{title}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      href="https://fonts.googleapis.com/css2?family=Raleway:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <script is:inline>
      const getTheme = () => {
        // 1. Se o usuário já visitou e escolheu um tema, respeita a memória
        if (typeof localStorage !== 'undefined' && localStorage.getItem('appTheme')) {
          return localStorage.getItem('appTheme');
        }
        // 2. Se é a primeira vez (ou não tem memória), retorna 'dark' como padrão
        return 'dark';
      };

      // Aplica a classe 'dark' se necessário
      if (getTheme() === 'dark') {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
    </script>
  </head>
  
  <body class="overflow-x-hidden overflow-y-auto bg-body text-heading-3 selection:bg-primary selection:text-white">
    <Navbar />
    <slot />
    <Footer />
  </body>

  <script>
    // --- Lógica do Botão de Tema ---
    const switchTheme = document.querySelector("[data-switch-theme]") as HTMLButtonElement;

    if (switchTheme) {
      switchTheme.addEventListener("click", (e) => {
        e.preventDefault();
        const doc = document.documentElement;
        if (doc.classList.contains("dark")) {
          doc.classList.remove("dark");
          localStorage.setItem("appTheme", "light");
        } else {
          doc.classList.add("dark");
          localStorage.setItem("appTheme", "dark");
        }
      });
    }

    // --- Lógica do Menu Mobile ---
    const toggleMenu = document.querySelector("[data-toggle-nav]") as HTMLButtonElement;
    const navbar = document.querySelector("[data-navbar]") as HTMLDivElement;
    const overlayNav = document.querySelector("[data-nav-overlay]") as HTMLDivElement;
    const navLinks = navbar ? navbar.querySelectorAll("a") : [];

    const closeMenu = () => {
      if(!toggleMenu || !navbar || !overlayNav) return;
      toggleMenu.setAttribute("data-open-nav", "false");
      toggleMenu.setAttribute("aria-expanded", "false");
      overlayNav.setAttribute("data-is-visible", "false");
      document.body.classList.remove("!overflow-y-hidden");
      navbar.style.height = "0px";
    };

    if (toggleMenu && navbar && overlayNav) {
      toggleMenu.addEventListener("click", (e) => {
        e.preventDefault();
        const isOpen = toggleMenu.getAttribute("data-open-nav") === "true";
        
        if (!isOpen) {
          toggleMenu.setAttribute("data-open-nav", "true");
          toggleMenu.setAttribute("aria-expanded", "true");
          overlayNav.setAttribute("data-is-visible", "true");
          document.body.classList.add("!overflow-y-hidden");
          navbar.style.height = `${navbar.scrollHeight}px`;
        } else {
          closeMenu();
        }
      });

      // Fechar ao clicar no overlay
      overlayNav.addEventListener("click", closeMenu);
      
      // Fechar ao clicar em qualquer link do menu
      navLinks.forEach(link => {
        link.addEventListener("click", closeMenu);
      });
    }
  </script>
</html>

<style is:global>
  :root {
    --color-bg: 243 244 246;
    --color-border: 255 255 255;
    --color-box: 255 255 255;
    --box-border: 229 231 235;
    --box-sd: 226 232 240 / 0.5;
    --heading-1: 23 37 84;
    --heading-2: 31 41 55;
    --heading-3: 55 65 81;
  }

  .dark {
    --color-bg: 3 7 18;
    --color-box: 17 24 39;
    --box-border: 243 244 246/0.1;
    --box-sd: transparent;
    --heading-1: 255 255 255;
    --heading-2: 243 244 246;
    --heading-3: 209 213 219;
  }

  /* Animações do Menu Hamburguer */
  [data-toggle-nav][data-open-nav="true"] #line1 {
    transform: translateY(0.375rem) rotate(40deg);
  }
  [data-toggle-nav][data-open-nav="true"] #line2 {
    transform: scaleX(0);
    opacity: 0;
  }
  [data-toggle-nav][data-open-nav="true"] #line3 {
    transform: translateY(-0.375rem) rotate(-40deg);
  }

  [data-nav-overlay][data-is-visible="true"] {
    visibility: visible;
    display: flex;
  }
</style>